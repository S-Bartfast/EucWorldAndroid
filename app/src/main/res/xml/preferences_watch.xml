<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="@string/watch_enable_on_startup"
        android:title="@string/watch_enable_on_startup_title" />

    <CheckBoxPreference
        android:key="@string/watch_power_saving_mode"
        android:title="@string/watch_power_saving_mode_title"
        android:summary="@string/watch_power_saving_mode_summary"/>

    <ListPreference
        android:key="@string/watch_action_button"
        android:title="@string/action_button_title"
        android:defaultValue="0"
        android:entries="@array/action"
        android:entryValues="@array/action_values" />

    <ListPreference
        android:key="@string/watch_action_single"
        android:title="@string/action_single_tap_title"
        android:defaultValue="0"
        android:entries="@array/action"
        android:entryValues="@array/action_values" />

    <ListPreference
        android:key="@string/watch_action_double"
        android:title="@string/action_double_tap_title"
        android:defaultValue="0"
        android:entries="@array/action"
        android:entryValues="@array/action_values" />

    <ListPreference
        android:key="@string/watch_action_hold"
        android:title="@string/action_hold_tap_title"
        android:defaultValue="0"
        android:entries="@array/action"
        android:entryValues="@array/action_values" />

    <ListPreference
        android:key="@string/watch_horn_mode"
        android:title="@string/horn_mode_title"
        android:defaultValue="0"
        android:entries="@array/horn_mode"
        android:entryValues="@array/horn_mode_values" />

    <CheckBoxPreference
        android:key="@string/watch_use_custom_horn_sound"
        android:title="@string/use_custom_horn_sound_title"
        android:summary="@string/use_custom_horn_sound_summary" />

    <Preference
        android:dependency="watch_use_custom_horn_sound"
        android:key="@string/watch_custom_horn_sound"
        android:title="@string/horn_custom_sound_title" />

</PreferenceScreen>