<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/page_four"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/tourContent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">
        <WebView
            android:id="@+id/tourWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"/>
        <LinearLayout
            android:id="@+id/tourHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <TextView
                style="@style/Header"
                android:id="@+id/tourTitle"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tour_header"/>
            <TextView
                android:id="@+id/tourStatus"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="20sp"
                android:text="@string/livemap_offline"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/tourButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true">
        <ImageButton
            android:visibility="visible"
            android:id="@+id/tourStartFinish"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/round_button_white"
            app:srcCompat="@drawable/ic_play" />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/tourPause"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/round_button_white"
            app:srcCompat="@drawable/ic_pause" />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/tourShare"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/round_button_white"
            app:srcCompat="@drawable/ic_share" />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/tourAddPhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/round_button_white"
            app:srcCompat="@drawable/ic_add_a_photo" />
    </LinearLayout>
</RelativeLayout>