<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/main_view"
        android:animateLayoutChanges="true"
        tools:context="net.lastowski.eucworld.MainActivity">
        <LinearLayout
            android:background="@color/background_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/header">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    app:srcCompat="@drawable/ic_logo_eucworld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:minHeight="?attr/actionBarSize"
                    app:titleTextColor="@android:color/white" />
            </RelativeLayout>
            <View
                android:layout_width="56dp"
                android:layout_height="4dp"
                android:background="@color/logo"
                android:layout_gravity="left"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>
        </LinearLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <include layout="@layout/main_view_one" />
            <include layout="@layout/main_view_two" />
            <include layout="@layout/main_view_three" />
            <include layout="@layout/main_view_four" />
        </androidx.viewpager.widget.ViewPager>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/disabled"
            android:orientation="vertical"
            android:id="@+id/footer">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/statusbar"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    app:dampingRatio="0.5"
                    app:dotsColor="@color/divider"
                    app:dotsCornerRadius="2dp"
                    app:dotsSize="10dp"
                    app:dotsSpacing="24dp"
                    app:dotsStrokeColor="@color/divider"
                    app:dotsStrokeWidth="1dp"
                    app:stiffness="300" />
                <net.lastowski.common.view.StatusBar
                    android:id="@+id/statusbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/primary_text"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#CC000000">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/preference_toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white" />
        <FrameLayout
            android:id="@+id/settings_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>